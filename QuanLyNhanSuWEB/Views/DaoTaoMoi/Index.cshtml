                                        <label class="text-end fw-bold" style="width: 30%; padding-right: 40px;">Ngày Bắt Đầu</label>
                                        <input type="date" asp-for="@Model.DaoTao.NgayBatDau" style="width: 70%;" min="1900-01-01" class="form-control">
                                        <span asp-validation-for="@Model.DaoTao.NgayBatDau" class="text-danger"></span>
                                    </div>

                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 30%; padding-right: 40px;">Số Quyết Định</label>
                                        <input type="text" asp-for="@Model.DaoTao.SoQuyetDinh" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.DaoTao.SoQuyetDinh" class="text-danger"></span>
                                    </div>

