@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            // Khởi tạo DataTables
            var table = $('#daotaocutable').DataTable();
        });

        $(document).ready(function () {
            var selectedRowDaoTaoCu = null;

            $('.tabledaotaocu .tbodydaotaocu .trdaotaocu').click(function () {
                // Loại bỏ lựa chọn trước đó (nếu có)
                if (selectedRowDaoTaoCu != null) {
                    selectedRowDaoTaoCu.removeClass('selected-daotao');
                }

                // Đánh dấu dòng được chọn và lưu lại dòng đó
                selectedRowDaoTaoCu = $(this);
                selectedRowDaoTaoCu.addClass('selected-daotao');
            });

            $('.update-daotao').click(function () {
                if (selectedRowDaoTaoCu != null) {
