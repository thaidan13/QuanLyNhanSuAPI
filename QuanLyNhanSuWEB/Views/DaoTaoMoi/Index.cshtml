                    </form>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table id="daotaocutable" class="table table-striped tabledaotaocu" style="cursor:pointer;">
                <thead>
                    <tr>
                        <th hidden>
                            Mã Đào Tạo
                        </th>
                        <th>
                            Họ tên
                        </th>
                        <th>
                            Khoá học
                        </th>
                        <th>
                            Trường/Đơn vị
                        </th>
                        <th>
                            Hoàn Tất
                        </th>
                        <th>
                            Bằng
                        </th>
                        <th>
                            Từ ngày
                        </th>
                        <th>
                            Đến Ngày
                        </th>
                        <th hidden>
                            Số quyết định
                        </th>
                        <th hidden>
                            Hình thức
                        </th>
                        <th hidden>
                            Số bằng
                        </th>
                        <th hidden>
                            Dạng bằng
                        </th>
                        <th hidden>
                            Ngày cấp
                        </th>
                        <th hidden>
                            Hết hạn
                        </th>
                        <th hidden>
                            Ghi chú
                        </th>
                        <th hidden>
                            IdNV
                        </th>
                    </tr>
                </thead>
                <tbody class="tbodydaotaocu">
                    @foreach (var item in Model.DaoTaos)
                    {
                        <tr class="selected-daotao trdaotaocu" data-id="@item.Id">
                            <td hidden>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>
                                @Model.NhanVien.HoKhaiSinh @Model.NhanVien.TenKhaiSinh
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KhoaHoc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TruongDonVi)
                            </td>
                            <td>
                                @if (item.HoanTat == true)
                                {
                                    <p>Đã Hoàn Tất</p>
                                }
                                else
                                {
                                    <p>Chưa Hoàn Tất</p>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenBang)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayBatDau)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayKetThuc)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.SoQuyetDinh)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.HinhThuc)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.SoBang)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.DangBang)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.NgayCap)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.HetHan)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.GhiChu)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.IdNv)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
       
    </div>
</div>

