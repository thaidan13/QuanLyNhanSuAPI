@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>


    <script>
        $(document).ready(function () {
            // Khởi tạo DataTables
            var table = $('#kyluattable').DataTable();
        });

        $(document).ready(function () {
            var selectedRowKyLuat = null;

            $('.tablekyluat .tbodykyluat .trkyluat').click(function () {
                // Loại bỏ lựa chọn trước đó (nếu có)
                if (selectedRowKyLuat != null) {
                    selectedRowKyLuat.removeClass('selected-kyluat');
                }

                // Đánh dấu dòng được chọn và lưu lại dòng đó
                selectedRowKyLuat = $(this);
                selectedRowKyLuat.addClass('selected-kyluat');
            });

            $('.update-kyluat').click(function () {
                if (selectedRowKyLuat != null) {
                    // Lấy thông tin từ dòng được chọn
                    var id = selectedRowKyLuat.find('td:eq(0)').text();
                    var hinhthuc = selectedRowKyLuat.find('td:eq(2)').text().trim();
                    var capquyetdinh = selectedRowKyLuat.find('td:eq(3)').text().trim();
                    var soquyetdinh = selectedRowKyLuat.find('td:eq(4)').text().trim();
                    var nguoiky = selectedRowKyLuat.find('td:eq(5)').text().trim();
                    var ngayhieuluc = selectedRowKyLuat.find('td:eq(6)').text().trim();
                    var dinhkem = selectedRowKyLuat.find('td:eq(7)').text().trim();
                    var denngay = selectedRowKyLuat.find('td:eq(9)').text().trim();
                    var lydo = selectedRowKyLuat.find('td:eq(10)').text().trim();
                    var ghichu = selectedRowKyLuat.find('td:eq(11)').text().trim();


                    // Điền thông tin vào modal
                    $('#modalcapnhatkyluat input[name="Id"]').val(id);
                    $('#modalcapnhatkyluat input[name="HinhThuc"]').val(hinhthuc);
                    $('#modalcapnhatkyluat input[name="CapQuyetDinh"]').val(capquyetdinh);
                    $('#modalcapnhatkyluat input[name="SoQuyetDinh"]').val(soquyetdinh);
                    $('#modalcapnhatkyluat input[name="NguoiKy"]').val(nguoiky);
                    $('#modalcapnhatkyluat input[name="TuNgay"]').val(ngayhieuluc);
                    $('#modalcapnhatkyluat input[name="DinhKem"]').val(dinhkem);
                    $('#modalcapnhatkyluat input[name="DenNgay"]').val(denngay);
                    $('#modalcapnhatkyluat input[name="LyDo"]').val(lydo);
                    $('#modalcapnhatkyluat input[name="GhiChu"]').val(ghichu);

                    // Hiển thị modal
                    $('#modalcapnhatkyluat').modal('show');
                } else {
                    alert("Vui lòng chọn dòng để chỉnh sửa.");
                }
            });
        });


        $(document).ready(function () {
            var selectedRowXoaKyLuat = null;
            var id = null;

            $('.tablekyluat .tbodykyluat .trkyluat').click(function () {
                if (selectedRowXoaKyLuat != null) {
                    selectedRowXoaKyLuat.removeClass('selected-kyluat');
                }
                id = $(this).data("id");
                $(this).addClass('selected-kyluat');
                selectedRowXoaKyLuat = $(this);
            });

            $(".delete-kyluat").click(function () {
                var confirmation = confirm("Bạn có chắc chắn muốn xóa thông tin này?");
                if (selectedRowXoaKyLuat != null) {
                    if (confirmation) {
                        // Nếu người dùng xác nhận xóa, hãy chuyển hướng đến hàm DeleteConfirmed của controller
                        window.location.href = "/KhenThuong/DeleteKhenThuong?Id=" + id; // Thay ControllerName bằng tên của controller bạn đang sử dụng
                    }
                } else {
                    alert("Vui lòng chọn dòng để chỉnh sửa.");
                }
            });
        });




        var inputSource = document.getElementById("File");
        var inputDestination = document.getElementById("NhanFile");

        inputSource.addEventListener("input", function () {
            // Khi giá trị thay đổi, sao chép giá trị từ thẻ input nguồn sang thẻ input đích
            NhanFile.value = File.value;
        });


    </script>

}