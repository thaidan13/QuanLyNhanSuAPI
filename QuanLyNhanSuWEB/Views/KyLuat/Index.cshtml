@model QuanLyNhanSuWEB.DTO.HoSoNhanSuDTO.KhenThuongKyLuatDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-4 row">
    <h3 for="" class="fw-bold m-0"><i class="fa-solid fa-circle-info"></i> Kỷ Luật</h3>
    <hr class="mt-0">
    <div class="col-md-12 p-0" style="border: 2px solid rgb(36, 92, 166);">
        <div class="text-center pt-3 pb-3" style="font-size: 18px; background-color: rgb(36, 92, 166);">
            <label class="fw-bold" style="color: white; margin-right: 10px;">Tóm Lược Nhân Viên</label>
        </div>
        <div class="profile p-4 d-md-flex">
            <div class="employee-image mb-3 mb-md-0 me-md-4" style="width: 200px; height: 250px; border: 1px solid #ccc; border-radius:10px;">
                <img src="~/uploads/@Model.NhanVien.HinhAnh" width="100%" height="100%" alt="Hình nhân viên">
            </div>
            <div class="text-center text-md-start ml-3">
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Họ và tên</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.HoKhaiSinh @Model.NhanVien.TenKhaiSinh</label>
                    </div>
                </div>
                <!-- Các grid-col khác tương tự -->
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Mã Nhân Viên</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.IdNv</label>
                    </div>
                </div>
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Phòng Ban</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.IdPbNavigation.TenPhongBan</label>
                    </div>
                </div>
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Điện Thoại Nhà</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.DienThoaiNha</label>
                    </div>
                </div>
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Điện Thoại Di Động</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.Dtdd</label>
                    </div>
                </div>
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Email</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.Email</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="border: 2px solid rgb(36, 92, 166); border-radius: 0px 0px 15px 15px; margin-top: 15px; padding: 10px;">
        <div class="d-flex justify-content-between align-items-center mt-3 mb-3" style="gap: 10px;">

            <div>
                <a class="btn" href="@Url.Action("Details", "ThongTinNhanVien", new {  IdNV = @Model.NhanVien.IdNv })" style="background-color: rgb(36, 92, 166) !important; font-weight: bold; color: white;"><i class="fa-solid fa-arrow-left"></i> Trở về</a>
            </div>

            <div class="d-flex" style="gap: 10px;">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalkyluat">
                    Thêm mới
                </button>

                <button type="button" class="btn btn-success update-kyluat" data-bs-toggle="modal" data-bs-target="#modalcapnhatkyluat">
                    Cập Nhật
                </button>

                <button class="delete-button btn btn-danger delete-kyluat">Xoá</button>
            </div>

            
        </div>

        <div class="modal fade" id="modalkyluat" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Kỷ Luật</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center justify-content-center align-items-center ">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input asp-for="@Model.KhenThuongKyLuat.IdNv" hidden value="@Model.NhanVien.IdNv" class="form-control" />
                                <input asp-for="@Model.KhenThuongKyLuat.Loai" hidden value="true" class="form-control" />
                                <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                    <label class="text-end fw-bold" style=" padding-right: 40px;">Nhân Viên</label>
                                    <strong style="color: rgb(36, 92, 166);">@Model.NhanVien.HoKhaiSinh @Model.NhanVien.TenKhaiSinh</strong>
                                </div>
                                <hr />

                                <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                    <label class="text-end fw-bold" style="width: 20%; padding-right: 40px;">Hình Thức</label>
                                    <input type="text" asp-for="@Model.KhenThuongKyLuat.HinhThuc" style="width: 70%;" class="form-control">
                                    <span asp-validation-for="@Model.KhenThuongKyLuat.HinhThuc" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 30%; padding-right: 40px;">Từ Ngày</label>
                                        <input type="date" asp-for="@Model.KhenThuongKyLuat.TuNgay" min="1900-01-01" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.KhenThuongKyLuat.TuNgay" class="text-danger"></span>
                                    </div>
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 30%; padding-right: 40px;">Lý Do</label>
                                        <input type="text" asp-for="@Model.KhenThuongKyLuat.LyDo" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.KhenThuongKyLuat.LyDo" class="text-danger"></span>
                                    </div>
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 30%; padding-right: 40px;">Cấp Quyết Định</label>
                                        <input type="text" asp-for="@Model.KhenThuongKyLuat.CapQuyetDinh" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.KhenThuongKyLuat.CapQuyetDinh" class="text-danger"></span>
                                    </div>
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 30%; padding-right: 40px;">Người Ký</label>
                                        <input type="text" asp-for="@Model.KhenThuongKyLuat.NguoiKy" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.KhenThuongKyLuat.NguoiKy" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 30%; padding-right: 40px;">Đến Ngày</label>
                                        <input type="date" asp-for="@Model.KhenThuongKyLuat.DenNgay" style="width: 70%;" min="1900-01-01" class="form-control">
                                        <span asp-validation-for="@Model.KhenThuongKyLuat.DenNgay" class="text-danger"></span>
                                    </div>
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 30%; padding-right: 40px;">Số Quyết Định</label>
                                        <input type="text" asp-for="@Model.KhenThuongKyLuat.SoQuyetDinh" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.KhenThuongKyLuat.SoQuyetDinh" class="text-danger"></span>
                                    </div>
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 30%; padding-right: 40px;">Ghi Chú</label>
                                        <input type="text" asp-for="@Model.KhenThuongKyLuat.GhiChu" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.KhenThuongKyLuat.GhiChu" class="text-danger"></span>
                                    </div>
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 30%; padding-right: 40px;">Đính Kèm</label>
                                        <input type="file" name="File" asp-for="@Model.KhenThuongKyLuat.DinhKem" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.KhenThuongKyLuat.DinhKem" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Thoát</button>
                            <input type="submit" class="btn btn-primary" value="Lưu">
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table id="kyluattable" class="table table-striped tablekyluat" style="cursor:pointer;">
                <thead>
                    <tr>
                        <th hidden>
                            Mã Đào Tạo
                        </th>
                        <th>
                            Nhân Viên
                        </th>
                        <th>
                            Hình Thức
                        </th>
                        <th>
                            Cấp Quyết Định
                        </th>
                        <th>
                            Số Quyết Định
                        </th>
                        <th>
                            Người Ký
                        </th>
                        <th>
                            Ngày Hiệu Lực
                        </th>
                        <th>
                            File
                        </th>
                        <th>Tương Tác File </th>
                        <th hidden>
                            Đến Ngày
                        </th>
                        <th hidden>
                            Lý Do
                        </th>
                        <th hidden>
                            Ghi Chú
                        </th>

                        <th hidden>
                            IdNV
                        </th>
                    </tr>
                </thead>
                <tbody class="tbodykyluat">
                    @foreach (var item in Model.KhenThuongKyLuats)
                    {
                        <tr class="selected-kyluat trkyluat" data-id="@item.Id">
                            <td hidden>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>
                                @Model.NhanVien.HoKhaiSinh @Model.NhanVien.TenKhaiSinh
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HinhThuc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CapQuyetDinh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoQuyetDinh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NguoiKy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TuNgay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DinhKem)
                            </td>
                            <td>
                                <a class="p-0" href="\uploadfiles\@item.DinhKem">Xem</a> | <a class="p-0" href="@Url.Action("DownloadFile", "KhenThuong", new { fileName = item.DinhKem })">Tải về tệp tin</a>
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.DenNgay)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.LyDo)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.GhiChu)
                            </td>

                            <td hidden>
                                @Html.DisplayFor(modelItem => item.IdNv)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
    </div>
</div>

