                        <tr>
                            <th hidden>
                                Id
                            </th>
                            <th>
                                Từ Ngày
                            </th>
                            <th>
                                Đến Ngày
                            </th>
                            <th>
                                Tên Công Ty
                            </th>
                            <th>
                                Tên Phòng Ban
                            </th>
                            <th>
                                Tên Đội
                            </th>
                            <th>
                                Chức Danh
                            </th>
                            <th>
                                File
                            </th>
                            <th>Tương Tác File </th>
                            <th hidden>
                                Lý Do
                            </th>
                            <th hidden>
                                Trạng Thái
                            </th>
                            <th hidden>
                                Số HĐLĐ
                            </th>
                            <th hidden>
                                Loại HĐLĐ
                            </th>
                            <th hidden>
                                Ngày Quyết Định
                            </th>
                            <th hidden>
                                Ngày Hiệu Lực
                            </th>
                            <th hidden>
                                Số Quyết Định
                            </th>
                            <th hidden>
                                Người Ký
                            </th>
                            <th hidden>
                                IdNV
                            </th>
                        </tr>
                    </thead>
                    <tbody class="tbodytrongcongty">
                        @foreach (var item in Model.TrongCongTacs)
                        {
                            <tr class="selected-trongcongty trtrongcongty " data-id="@item.Id">
                                <td hidden>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TuNgay)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DenNgay)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenCongTy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenPhongBan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenDoi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ChucDanh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FileQuyetDinh)
                                </td>
                                <td>
                                    <a class="p-0" href="\uploadfiles\@item.FileQuyetDinh">Xem</a> | <a class="p-0" href="@Url.Action("DownloadFile", "CongTac", new { fileName = item.FileQuyetDinh })">Tải về tệp tin</a>
                                </td>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.LyDo)
                                </td>
                                <td hidden>
                                    @if (item.DangHoatDong == true)
                                    {
                                        <strong>Đang Hoạt Động</strong>
                                    }
                                    else
                                    {
                                        <strong>Ngừng Hoạt Động</strong>
                                    }
                                </td>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.SoHdld)
                                </td>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.LoaiHdld)
                                </td>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.NgayQuyetDinh)
                                </td>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.NgayHieuLuc)
                                </td>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.SoQd)
                                </td>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.NguoiKy)
                                </td>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.IdNv)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
           
        </div>

