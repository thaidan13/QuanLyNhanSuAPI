                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Thoát</button>
                    <input type="submit" class="btn btn-primary" value="Lưu">
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            // Khởi tạo DataTables
            var table = $('#dinuocngoaitable').DataTable();
        });

        $(document).ready(function () {
            var selectedRowForModalUpdateNuocNgoai = null;

            $('.tablenuocngoai .tbodynuocngoai .trnuocngoai').click(function () {
                // Loại bỏ lựa chọn trước đó (nếu có)
                if (selectedRowForModalUpdateNuocNgoai != null) {
                    selectedRowForModalUpdateNuocNgoai.removeClass('selected');
                }

                // Đánh dấu dòng được chọn và lưu lại dòng đó
                selectedRowForModalUpdateNuocNgoai = $(this);
                selectedRowForModalUpdateNuocNgoai.addClass('selected');
            });

            $('.update-nuocngoai').click(function () {
                if (selectedRowForModalUpdateNuocNgoai != null) {
                    // Lấy thông tin từ dòng được chọn
                    var id = selectedRowForModalUpdateNuocNgoai.find('td:eq(0)').text();
                    var ngaydi = selectedRowForModalUpdateNuocNgoai.find('td:eq(1)').text().trim();
                    var ngayve = selectedRowForModalUpdateNuocNgoai.find('td:eq(2)').text().trim();
                    var thoigian = selectedRowForModalUpdateNuocNgoai.find('td:eq(3)').text().trim();
                    var quocgiaden = selectedRowForModalUpdateNuocNgoai.find('td:eq(4)').text().trim();
                    var mucdich = selectedRowForModalUpdateNuocNgoai.find('td:eq(5)').text().trim();
                    var idnv = selectedRowForModalUpdateNuocNgoai.find('td:eq(6)').text().trim();

                    // Điền thông tin vào modal
                    $('#modalcapnhatnuocngoai input[name="Id"]').val(id);
                    $('#modalcapnhatnuocngoai input[name="NgayDi"]').val(ngaydi);
                    $('#modalcapnhatnuocngoai input[name="NgayVe"]').val(ngayve);
                    $('#modalcapnhatnuocngoai input[name="ThoiGian"]').val(thoigian);
                    $('#modalcapnhatnuocngoai input[name="QuocGiaDen"]').val(quocgiaden);
                    $('#modalcapnhatnuocngoai input[name="MucDich"]').val(mucdich);
                    $('#modalcapnhatnuocngoai input[name="IdNv"]').val(idnv);

                    // Hiển thị modal
                    $('#modalcapnhatnuocngoai').modal('show');
                }else{
                    alert("Vui lòng chọn dòng để chỉnh sửa.");
                }
            });

        });

        $(document).ready(function () {
            var selectedRow = null;
            var id = null;

            $('.tablenuocngoai .tbodynuocngoai .trnuocngoai').click(function () {
                if (selectedRow != null) {
                    selectedRow.removeClass('selected');
                }
                id = $(this).data("id");
                $(this).addClass('selected');
                selectedRow = $(this);
            });

            $(".delete-nuocngoai").click(function () {

                var confirmation = confirm("Bạn có chắc chắn muốn xóa đào tạo này?");
                if (confirmation) {
                    // Nếu người dùng xác nhận xóa, hãy chuyển hướng đến hàm DeleteConfirmed của controller
                    window.location.href = "/DiNuocNgoai/DeleteNuocNgoai?Id=" + id; // Thay ControllerName bằng tên của controller bạn đang sử dụng
                }
            });
        });

