@model QuanLyNhanSuWEB.DTO.HoSoNhanSuDTO.DiNuocNgoaiDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-4 row">
    <h3 for="" class="fw-bold m-0"><i class="fa-solid fa-circle-info "></i>Đi Nước Ngoài</h3>
    <hr class="mt-0">
    <div class="col-md-12 p-0" style="border: 2px solid rgb(36, 92, 166);">
        <div class="text-center pt-3 pb-3" style="font-size: 18px; background-color: rgb(36, 92, 166);">
            <label class="fw-bold" style="color: white; margin-right: 10px;">Tóm Lược Nhân Viên</label>
        </div>
        <div class="profile p-4 d-md-flex">
            <div class="employee-image mb-3 mb-md-0 me-md-4" style="width: 200px; height: 250px; border: 1px solid #ccc; border-radius:10px;">
                <img src="~/uploads/@Model.NhanVien.HinhAnh" width="100%" height="100%" alt="Hình nhân viên">
            </div>
            <div class="text-center text-md-start ml-3">
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Họ và tên</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.HoKhaiSinh @Model.NhanVien.TenKhaiSinh</label>
                    </div>
                </div>
                <!-- Các grid-col khác tương tự -->
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Mã Nhân Viên</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.IdNv</label>
                    </div>
                </div>
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Phòng Ban</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.IdPbNavigation.TenPhongBan</label>
                    </div>
                </div>
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Điện Thoại Nhà</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.DienThoaiNha</label>
                    </div>
                </div>
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Điện Thoại Di Động</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.Dtdd</label>
                    </div>
                </div>
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Email</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.Email</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="border: 2px solid rgb(36, 92, 166); border-radius: 0px 0px 15px 15px; margin-top: 15px; padding: 10px;">
        <div class="d-flex justify-content-between align-items-center mt-3 mb-3" style="gap: 10px;">

            <div>
                <a class="btn" href="@Url.Action("Details", "ThongTinNhanVien", new {  IdNV = @Model.NhanVien.IdNv })" style="background-color: rgb(36, 92, 166) !important; font-weight: bold; color: white;"><i class="fa-solid fa-arrow-left"></i> Trở về</a>
            </div>

            <div class="d-flex" style="gap: 10px;">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalnuocngoai">
                    Thêm mới
                </button>

                <button type="button" class="btn btn-success update-nuocngoai" data-bs-toggle="modal" data-bs-target="#modalcapnhatnuocngoai">
                    Cập Nhật
                </button>

                <button class="delete-button btn btn-danger delete-nuocngoai">Xoá</button>
            </div>
            
        </div>

        <div class="modal fade" id="modalnuocngoai" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <form asp-action="Create" method="post">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Đi Nước Ngoài</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center justify-content-center align-items-center ">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <input asp-for="@Model.NuocNgoai.IdNv" hidden value="@Model.NhanVien.IdNv" class="form-control" />
                                <div class="w-100">
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 20%; padding-right: 40px;">Ngày Đi:</label>
                                        <input type="date" asp-for="@Model.NuocNgoai.NgayDi" min="1900-01-01" id="ngayDi" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.NuocNgoai.NgayDi" class="text-danger"></span>
                                    </div>
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 20%; padding-right: 40px;">Ngày Về:</label>
                                        <input type="date" asp-for="@Model.NuocNgoai.NgayVe" min="1900-01-01" id="ngayVe" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.NuocNgoai.NgayVe" class="text-danger"></span>
                                    </div>
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 20%; padding-right: 40px;">Thời Gian:</label>
                                        <input type="text" asp-for="@Model.NuocNgoai.ThoiGian" id="soNgayDi" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.NuocNgoai.ThoiGian" class="text-danger"></span>
                                    </div>
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 20%; padding-right: 40px;">Quốc Gia Đến:</label>
                                        <input type="text" asp-for="@Model.NuocNgoai.QuocGiaDen" id="ngayVe" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.NuocNgoai.QuocGiaDen" class="text-danger"></span>
                                    </div>
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 20%; padding-right: 40px;">Mục Đích:</label>
                                        <input type="text" asp-for="@Model.NuocNgoai.MucDich" id="ngayVe" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.NuocNgoai.MucDich" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Thoát</button>
                            <input type="submit" class="btn btn-primary" value="Lưu">
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table id="dinuocngoaitable" class="table table-striped tablenuocngoai" style="cursor:pointer;">
                <thead>
                    <tr>
                        <th hidden>
                            Id
                        </th>
                        <th>
                            Ngày Đi
                        </th>
                        <th>
                            Ngày Về
                        </th>
                        <th>
                            Thời Gian
                        </th>
                        <th>
                            Quốc Gia Đến
                        </th>
                        <th>
                            Mục Đích
                        </th>
                        <th hidden>
                            IdNV
                        </th>

                    </tr>
                </thead>
                <tbody class="tbodynuocngoai">
                    @foreach (var item in Model.NuocNgoais)
                    {
                        <tr class="selected trnuocngoai" data-id="@item.Id">

                            <td hidden>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayDi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayVe)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ThoiGian)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QuocGiaDen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MucDich)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.IdNv)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
       
    </div>
</div>

