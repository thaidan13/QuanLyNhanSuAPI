@model QuanLyNhanSuWEB.DTO.HoSoNhanSuDTO.GiaDinhDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-4 row">
    <h3 for="" class="fw-bold m-0"><i class="fa-solid fa-people-roof"></i> Gia Đình</h3>
    <hr class="mt-0">
    <div class="col-md-12 p-0" style="border: 2px solid rgb(36, 92, 166);">
        <div class="text-center pt-3 pb-3" style="font-size: 18px; background-color: rgb(36, 92, 166);">
            <label class="fw-bold" style="color: white; margin-right: 10px;">Tóm Lược Nhân Viên</label>
        </div>
        <div class="profile p-4 d-md-flex">
            <div class="employee-image mb-3 mb-md-0 me-md-4" style="width: 200px; height: 250px; border: 1px solid #ccc; border-radius:10px;">
                <img src="~/uploads/@Model.NhanVien.HinhAnh" width="100%" height="100%" alt="Hình nhân viên">
            </div>
            <div class="text-center text-md-start ml-3">
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Họ và tên</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.HoKhaiSinh @Model.NhanVien.TenKhaiSinh</label>
                    </div>
                </div>
                <!-- Các grid-col khác tương tự -->
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Mã Nhân Viên</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.IdNv</label>
                    </div>
                </div>
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Phòng Ban</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.IdPbNavigation.TenPhongBan</label>
                    </div>
                </div>
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Điện Thoại Nhà</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.DienThoaiNha</label>
                    </div>
                </div>
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Điện Thoại Di Động</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.Dtdd</label>
                    </div>
                </div>
                <div class="grid-col d-flex mb-2">
                    <div class="str me-3">
                        <strong>Email</strong>
                    </div>
                    <div class="lab">
                        <label> @Model.NhanVien.Email</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="border: 2px solid rgb(36, 92, 166); border-radius: 0px 0px 15px 15px; margin-top: 15px; padding: 10px;">
        <div class="d-flex justify-content-between align-items-center mt-3 mb-3" style="gap: 10px;">

            <div>
                <a class="btn" href="@Url.Action("Details", "ThongTinNhanVien", new {  IdNV = @Model.NhanVien.IdNv })" style="background-color: rgb(36, 92, 166) !important; font-weight: bold; color: white;"><i class="fa-solid fa-arrow-left"></i> Trở về</a>
            </div>

            <div class="d-flex" style="gap: 10px;">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalgiadinh">
                    Thêm mới
                </button>

                <button type="button" class="btn btn-success update-giadinh" data-bs-toggle="modal" data-bs-target="#modalcapnhatgiadinh">
                    Cập Nhật
                </button>

                <button class="delete-button btn btn-danger delete-giadinh">Xoá</button>
            </div>

            
        </div>

        <div class="modal fade" id="modalgiadinh" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <form asp-action="Create" method="post">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Thông Tin Gia Đình</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center justify-content-center align-items-center ">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input asp-for="@Model.GiaDinh.IdNv" hidden value="@Model.NhanVien.IdNv" class="form-control" />
                                <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                    <label class="text-end fw-bold" style="width: 12.8%; padding-right: 40px;">Họ Tên</label>
                                    <input type="text" asp-for="@Model.GiaDinh.HoTen" style="width: 83.65%;" class="form-control">
                                    <span asp-validation-for="@Model.GiaDinh.HoTen" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 25%; padding-right: 40px;">Quan Hệ</label>
                                        <input type="text" asp-for="@Model.GiaDinh.QuanHe" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.GiaDinh.QuanHe" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 25%; padding-right: 40px;">Ngày Sinh</label>
                                        <input type="date" asp-for="@Model.GiaDinh.NgaySinh" min="1900-01-01" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.GiaDinh.NgaySinh" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                    <label class="text-end fw-bold" style="width: 12.8%; padding-right: 40px;">Địa Chỉ</label>
                                    <input type="text" asp-for="@Model.GiaDinh.DiaChi" style="width: 83.65%;" class="form-control">
                                    <span asp-validation-for="@Model.GiaDinh.DiaChi" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 25%; padding-right: 40px;">Phường</label>
                                        <input type="text" asp-for="@Model.GiaDinh.Phuong" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.GiaDinh.Phuong" class="text-danger"></span>
                                    </div>
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 25%; padding-right: 40px;">Tỉnh Thành</label>
                                        <input type="text" asp-for="@Model.GiaDinh.TinhThanh" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.GiaDinh.TinhThanh" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 25%; padding-right: 40px;">Quận Huyện</label>
                                        <input type="text" asp-for="@Model.GiaDinh.QuanHuyen" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.GiaDinh.QuanHuyen" class="text-danger"></span>
                                    </div>
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 25%; padding-right: 40px;"></label>
                                        <select asp-for="@Model.GiaDinh.ConSong" style="width: 70%; font-weight: bold;" class="form-control">
                                            <option value="true">Còn Sống</option>
                                            <option value="false">Đã Mất</option>
                                        </select>
                                        <span asp-validation-for="@Model.GiaDinh.ConSong" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Thoát</button>
                            <input type="submit" class="btn btn-primary" value="Lưu">
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table id="giadinhtable" class="table table-striped tablegiadinh" style="cursor:pointer;">
                <thead>
                    <tr>
                        <th hidden>
                            Id
                        </th>
                        <th class="text-center">
                            Quá Trình Làm Việc
                        </th>
                        <th>
                            Quan Hệ
                        </th>
                        <th>
                            Họ Tên
                        </th>
                        <th>
                            Năm Sinh
                        </th>
                        <th>
                            Tỉnh/Thành
                        </th>
                        <th>
                            Địa Chỉ
                        </th>
                        <th>
                            Phường
                        </th>
                        <th>
                            Quận Huyện
                        </th>
                        <th>

                        </th>
                        <th hidden>
                            IdNV
                        </th>
                    </tr>
                </thead>
                <tbody class="tbodygiadinh">
                    @foreach (var item in Model.GiaDinhs)
                    {
                        <tr class="selected-giadinh trgiadinh" data-id="@item.Id">
                            <td hidden>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>
                                <a href="@Url.Action("Index", "QuaTrinhLamViecCuaThanNhan", new {  nhanvienId = item.IdNv, Id = item.Id, })" data-idNv="@item.IdNv" onclick="sendNhanvienId(this)" class="p-0 d-flex justify-content-center align-items-center"><i class="fa-solid fa-square-plus" style="font-size: 36px;"></i></a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QuanHe)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HoTen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgaySinh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TinhThanh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiaChi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phuong)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QuanHuyen)
                            </td>
                            <td>
                                @if (item.ConSong == true)
                                {
                                    <strong>Còn Sống</strong>
                                }
                                else
                                {
                                    <strong>Đã Mất</strong>
                                }
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.IdNv)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
       
    </div>
</div>

