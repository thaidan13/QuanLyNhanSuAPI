@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            // Khởi tạo DataTables
            var table = $('#giadinhtable').DataTable();
        });

        $(document).ready(function () {
            var selectedRowGiaDinh = null;

            $('.tablegiadinh .tbodygiadinh .trgiadinh').click(function () {
                // Loại bỏ lựa chọn trước đó (nếu có)
                if (selectedRowGiaDinh != null) {
                    selectedRowGiaDinh.removeClass('selected-giadinh');
                }

                // Đánh dấu dòng được chọn và lưu lại dòng đó
                selectedRowGiaDinh = $(this);
                selectedRowGiaDinh.addClass('selected-giadinh');
            });

            $('.update-giadinh').click(function () {
                if (selectedRowGiaDinh != null) {
                    // Lấy thông tin từ dòng được chọn
                    var id = selectedRowGiaDinh.find('td:eq(0)').text();
                    var quanhe = selectedRowGiaDinh.find('td:eq(2)').text().trim();
                    var hoten = selectedRowGiaDinh.find('td:eq(3)').text().trim();
                    var namsinh = selectedRowGiaDinh.find('td:eq(4)').text().trim();
                    var tinhthanh = selectedRowGiaDinh.find('td:eq(5)').text().trim();
                    var diachi = selectedRowGiaDinh.find('td:eq(6)').text().trim();
                    var phuong = selectedRowGiaDinh.find('td:eq(7)').text().trim();
                    var quanhuyen = selectedRowGiaDinh.find('td:eq(8)').text().trim();
                    var consong = selectedRowGiaDinh.find('td:eq(9)').text().trim();
                    var idnv = selectedRowGiaDinh.find('td:eq(10)').text().trim();

                    // Điền thông tin vào modal
                    $('#modalcapnhatgiadinh input[name="Id"]').val(id);
                    $('#modalcapnhatgiadinh input[name="QuanHe"]').val(quanhe);
                    $('#modalcapnhatgiadinh input[name="HoTen"]').val(hoten);
                    $('#modalcapnhatgiadinh input[name="NgaySinh"]').val(namsinh);
                    $('#modalcapnhatgiadinh input[name="TinhThanh"]').val(tinhthanh);
                    $('#modalcapnhatgiadinh input[name="DiaChi"]').val(diachi);
                    $('#modalcapnhatgiadinh input[name="Phuong"]').val(phuong);
                    $('#modalcapnhatgiadinh input[name="QuanHuyen"]').val(quanhuyen);
                    $('#modalcapnhatgiadinh select[name="ConSong"] option').filter(function () {
                        return $(this).text() === consong;
                    }).prop('selected', true);
                    $('#modalcapnhatgiadinh input[name="IdNv"]').val(idnv);

                    // Hiển thị modal
                    $('#modalcapnhatgiadinh').modal('show');
                }else{
                    alert("Vui lòng chọn dòng để chỉnh sửa.");
                }
            });


        });

        $(document).ready(function () {
            var selectedRowGiaDinh = null;
            var id = null;

            $('.tablegiadinh .tbodygiadinh .trgiadinh').click(function () {
                if (selectedRowGiaDinh != null) {
                    selectedRowGiaDinh.removeClass('selected-giadinh');
                }
                id = $(this).data("id");
                $(this).addClass('selected-giadinh');
                selectedRowGiaDinh = $(this);
            });

            $(".delete-giadinh").click(function () {
                var confirmation = confirm("Bạn có chắc chắn muốn xóa thông tin này?");
                if (selectedRowGiaDinh != null) {
                    if (confirmation) {
                        // Nếu người dùng xác nhận xóa, hãy chuyển hướng đến hàm DeleteConfirmed của controller
                        window.location.href = "/ThongTinGiaDinh/DeleteGiaDinh?Id=" + id; // Thay ControllerName bằng tên của controller bạn đang sử dụng
                    }
                } else {
                    alert("Vui lòng chọn dòng để chỉnh sửa.");
                }
            });

        });

        function sendNhanvienId(element) {
            // Lấy giá trị data-idNv từ thẻ <a>
            var nhanvienId = element.getAttribute("data-idNv");

            // Chuyển hướng đến action Index và truyền giá trị nhanvienId
            window.location.href = "/QuaTrinhLamViecCuaThanNhan/Index?nhanvienId=" + nhanvienId;
        }



    </script>
}