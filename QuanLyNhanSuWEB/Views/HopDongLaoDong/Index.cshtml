@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            // Khởi tạo DataTables
            var table = $('#hopdongtable').DataTable();
        });

        $(document).ready(function () {
            var selectedRowHopDong = null;

            $('.tablehopdong .tbodyhopdong .trhopdong').click(function () {
                // Loại bỏ lựa chọn trước đó (nếu có)
                if (selectedRowHopDong != null) {
                    selectedRowHopDong.removeClass('selected-hopdong');
                }

                // Đánh dấu dòng được chọn và lưu lại dòng đó
                selectedRowHopDong = $(this);
                selectedRowHopDong.addClass('selected-hopdong');
            });

            $('.update-hopdong').click(function () {
