                                        <input type="text" asp-for="@Model.HopDong.ChucDanh" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.HopDong.ChucDanh" class="text-danger"></span>
                                    </div>
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 30%; padding-right: 40px;">Hệ Số Lương</label>
                                        <input type="text" asp-for="@Model.HopDong.HeSoLuong" style="width: 70%;" class="form-control">
                                        <span asp-validation-for="@Model.HopDong.HeSoLuong" class="text-danger"></span>
                                    </div>
                                    <div class="details d-flex" style="padding: 5px; width: 100%; align-items: center;">
                                        <label class="text-end fw-bold" style="width: 30%; padding-right: 40px;">Người Ký</label>
