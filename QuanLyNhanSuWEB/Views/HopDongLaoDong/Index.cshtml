                        <th hidden>
                            Hệ Số Lương
                        </th>
                        <th hidden>
                            IdNV
                        </th>
                    </tr>
                </thead>
                <tbody class="tbodyhopdong">
                    @foreach (var item in Model.HopDongs)
                    {
                        <tr class="selected-hopdong trhopdong " data-id="@item.Id">
                            <td hidden>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoHdld)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LoaiHopDong)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ThoiHan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayKy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayThuViec)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayChinhThuc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayHetHan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NguoiKy)
                            </td>
                            <td>
                                <a class="p-0" href="\uploadfiles\@item.FileQuyetDinh">@Html.DisplayFor(modelItem => item.FileQuyetDinh)</a>
                            </td>
                            <td>
                                <a class="p-0" href="\uploadfiles\@item.FileHdld">@Html.DisplayFor(modelItem => item.FileHdld)</a>
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.NgayGiaHan)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.BacLuong)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.ChucDanh)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.HeSoLuong)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.IdNv)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        

    </div>
</div>

